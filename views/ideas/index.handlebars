{{#each ideas}}
  <div class="card card-body mb-3">
    <div class="row">
      <div class="col-lg-10 col-md-9 col-sm-8">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4">
        <a href="/ideas/edit/{{id}}" class="btn btn-warning btn-block mb-3">Edit</a>
        <form action="/ideas/{{id}}?_method=DELETE" method="post" class="">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-light btn-block mb-3" value="Delete">
        </form>
      </div>
    </div>
  </div>
{{else}}
  <p>No video ideas listed.</p>
{{/each}}